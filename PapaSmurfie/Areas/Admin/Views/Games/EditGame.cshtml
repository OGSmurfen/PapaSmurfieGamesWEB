@model AddGameVM



<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Edit Category</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="Game.GameId" hidden />
            <div class="border p-3">
                <div class="form-floating py-2 col-12">
                    <input asp-for="Game.GameName" class="form-control border-0 shadow" />
                    <label asp-for="Game.GameName" class="ms-2"></label>
                    <span asp-validation-for="Game.GameName" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Game.GameDescription" class="form-control border-0 shadow" />
                    <label asp-for="Game.GameDescription" class="ms-2"></label>
                    <span asp-validation-for="Game.GameDescription" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Game.GameCompanyName" class="form-control border-0 shadow" />
                    <label asp-for="Game.GameCompanyName" class="ms-2"></label>
                    <span asp-validation-for="Game.GameCompanyName" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Game.GamePrice" class="form-control border-0 shadow" />
                    <label asp-for="Game.GamePrice" class="ms-2"></label>
                    <span asp-validation-for="Game.GamePrice" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Game.GameGenre" class="form-control border-0 shadow" />
                    <label asp-for="Game.GameGenre" class="ms-2"></label>
                    <span asp-validation-for="Game.GameGenre" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="UploadFileModel.GameFile" type="file" class="form-control border-0 shadow" />
                    <label asp-for="UploadFileModel.GameFile" class="ms-2"></label>
                    <span asp-validation-for="UploadFileModel.GameFile"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="UploadFileModel.GameImage" type="file" class="form-control border-0 shadow" />
                    <label asp-for="UploadFileModel.GameImage" class="ms-2"></label>
                    <span asp-validation-for="UploadFileModel.GameImage"></span>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">
                            Create
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Games" asp-action="Index" class="btn btn-outline-primary border form-control">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>